<!DOCTYPE html>
<html>
<head>
  <title><%= products[0].cate_name %></title>
  <style>
    body {
      background-color: antiquewhite;
      font-family: 'Segoe UI', sans-serif;
      padding: 30px;
    }

    h2.section-title {
      text-align: center;
      font-family: Cambria, serif;
      font-size: 36px;
      margin: 20px 0 40px;
      color: #333;
    }

    .product-list {
      display: flex;
      flex-direction: column;
      gap: 25px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .product-item {
      display: flex;
      background-color: #fff8f0;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      align-items: center;
      transition: transform 0.3s ease;
    }

    .product-item:hover {
      transform: scale(1.02);
    }

    .product-item img {
      width: 240px;
      height: 200px;
      border-radius: 10px;
      object-fit: cover;
      margin-right: 30px;
    }

    .product-details {
      flex: 1;
    }

    .product-details h4 {
      font-size: 26px;
      margin: 0 0 12px;
      color: #222;
    }

    .product-details p {
      font-size: 20px;
      margin: 5px 0;
      color: #333;
    }

    .view-link {
      display: inline-block;
      padding: 10px 20px;
      background-color: #099e1d;
      color: white;
      text-decoration: none;
      border-radius: 10px;
      margin-top: 15px;
      font-size: 18px;
    }

    .view-link:hover {
      background-color: #ccf47d;
      color: black;
    }
  </style>
</head>

<body>

  <h2 class="section-title"><%= products[0].cate_name %></h2>

  <div class="product-list">
    <% products.forEach(function(product) { %>
      <div class="product-item">
        <a href="/product/<%= product.id %>">
          <img src="/images/<%= product.img_path %>" alt="<%= product.pname %>">
        </a>
        <div class="product-details">
          <h4><%= product.pname %></h4>
          <p><b>Price:</b> â‚¹<%= product.pcost %></p>
          <a href="/product/<%= product.id %>" class="view-link">View Details</a>
          
        </div>
      </div>
    <% }); %>
  </div>

</body>
</html>
